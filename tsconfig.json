{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "~/*": ["./src/*"],
      "~db/*": ["./db/*"],
      "~types": ["./types.ts"]
    }
  },
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}